@using ImagePosts.Data
@model ViewImageViewModel
<div class="row">

    <input type="hidden" id="image-id" value=@Model.Image.Id>
    <div class="col-md-10 col-md-offset-1 well">
        <h1> @Model.Image.ImageTitle </h1>
        <img src="/uploads/@Model.Image.ImageName" style="width: 900px;" />
        <br />
        <br />
        @if(Model.ImagesViewed!=null && Model.ImagesViewed.Contains(Model.Image.Id))
        {
            <button disabled id="like-button" class="btn btn-primary btn-lg"> LIKE </button>

        }
        else
        {
            <button  id="like-button" class="btn btn-primary btn-lg"> LIKE </button>

        }
        Current Likes: <span id="likes-count"> @Model.Image.NumberOfLikes </span>
    </div>
</div>

@section Scripts{
    <script src="~/js/viewImageJavaScript.js"></script>
}

